@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model GameDevelopersForum.ViewModels.LoginModel

@*<a asp-action="Register" asp-controller="Account">Регистрация</a>*@

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="text-center" style="max-width:20%; margin: auto auto auto auto; transform: translateY(125%)">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <input class="img-rounded" type="text" asp-for="Login" placeholder="@Localizer["enter_login"]" style="width:100%;" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <input class="img-rounded" asp-for="Password" placeholder="@Localizer["enter_password"]" style="width:100%;" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="@Localizer["sign_in"]" class="btn btn-lg btn-primary btn-block img-rounded" />
        </div>
    </div>
</form>